    <%= javascript_tag "window['SENTRY_PUBLIC_DSN']='#{ENV['SENTRY_PUBLIC_DSN']}'" %>
  <% end %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_API_KEY']%>" type="text/javascript"></script>
  <%= csrf_meta_tags %>
</head>
<body>
